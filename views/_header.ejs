<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Let's Vote</title>
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/html" href="vote_styles.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
        <script src="https://d3js.org/d3.v4.min.js"></script>
    </head>
    
    <body>
        
        
        <div class="navbar navbar-default navbar-static-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/" style="font-size: 30px; color: #009999; font-weight: bold">&nbsp;&nbsp;Let's Vote</a>
                </div>
                
                <ul class="nav navbar-nav navbar-right">
                    <% if (currentUser) { %>
                        <li>
                            <a href="/edit">
                                Hello, <%= currentUser.name() %>
                            </a>
                        </li>
                        <li><a href="/users/polls/add">Add polls</a></li>
                        <li><a href="/logout">Log out</a></li>
                        
                        <% } else { %>
                        
                        <li><a href="/login">Log in</a></li>
                        <li><a href="/signup">Sign up</a></li>
                        <% } %>
                </ul>
            </div>
            <div class="container" id="searchbar">
                <ul class="nav navbar-nav navbar-left">
                    <div class="row" >
                        <div class="col-sm-1"></div>
                    <div class="col-sm-2" style="margin-top: 15px">
                    <li><a href="#" id="all"><span>All polls</span></a></li>
                    </div>
                    <div class="col-sm-2" style="margin-top: 15px">
                    <li><a href="#" id="my"><span>My polls</span></a></li>
                    </div>
                    <div class="col-sm-7">
                    <li>
                        <form class="navbar-form navbar-left" action="javascript:void(0);">
                        <div class="input-group" style="float: left">
                            <input type="text" class="form-control" id="searchwords" placeholder="Search" style="width: 500px">
                            <div class="input-group-btn">
                                <button class="btn btn-default" id="searchbutton" type="submit">
                                <i class="glyphicon glyphicon-search"></i>
                                </button>
                            </div>
                        </div>
                        </form>
                    </li>
                    </div>
                    </div>
                </ul>
                    
            </div>
        </div>
        
        <div class="container" id="body">
            
            <% errors.forEach(function(error) { %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
            <% }) %>
                
            <% infos.forEach(function(info) { %>
                <div class="alert alert-info" role="alert">
                    <%= info %>
                </div>
            <% }) %>
